<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Turret -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FT_GPMG"]/statBases/Mass</xpath>
					<value>
						<Mass>10</Mass>
						<Bulk>15</Bulk>
					</value>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName="FT_GPMG"]/comps/li[@Class="CompProperties_Refuelable"]</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FT_GPMG"]/building/turretBurstCooldownTime</xpath>
					<value>
						<turretBurstCooldownTime>1.0</turretBurstCooldownTime>
					</value>
				</li>
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[defName="FT_GPMG"]/tradeTags</xpath>
					<nomatch Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="FT_GPMG"]</xpath>
						<value>
							<tradeTags />
						</value>
					</nomatch>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="FT_GPMG"]/tradeTags</xpath>
					<value>
						<li>CE_Turret</li>
					</value>
				</li>

				<!-- Gun -->
				<li Class="CombatExtended.PatchOperationMakeGunCECompatible">
					<defName>FT_Gun_GPMG</defName>
					<statBases>
						<RangedWeapon_Cooldown>0.56</RangedWeapon_Cooldown>
						<SightsEfficiency>1</SightsEfficiency>
						<ShotSpread>0.05</ShotSpread>
						<SwayFactor>0.95</SwayFactor>
					</statBases>
					<Properties>
						<recoilAmount>0.9</recoilAmount>
						<verbClass>CombatExtended.Verb_ShootCE</verbClass>
						<hasStandardCommand>true</hasStandardCommand>
						<defaultProjectile>Bullet_762x54mmR_FMJ</defaultProjectile>
						<warmupTime>1</warmupTime>
						<range>62</range>
						<ticksBetweenBurstShots>7</ticksBetweenBurstShots>
						<burstShotCount>10</burstShotCount>
						<soundCast>Shot_CE_BattleRifle</soundCast>
						<soundCastTail>GunTail_Medium</soundCastTail>
						<muzzleFlashScale>9</muzzleFlashScale>
						<targetParams>
							<canTargetLocations>true</canTargetLocations>
						</targetParams>
						<recoilPattern>Mounted</recoilPattern>
					</Properties>
					<AmmoUser>
						<magazineSize>60</magazineSize>
						<reloadTime>3.9</reloadTime>
						<ammoSet>AmmoSet_762x54mmR</ammoSet>
					</AmmoUser>
					<FireModes>
						<aimedBurstShotCount>5</aimedBurstShotCount>
						<aiUseBurstMode>FALSE</aiUseBurstMode>
						<aiAimMode>SuppressFire</aiAimMode>
						<noSingleShot>true</noSingleShot>
					</FireModes>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>